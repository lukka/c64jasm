{
	"name": "c64jasm",
	"description": "c64jasm extension",
	"author": "Janne Hellsten",
	"license": "MIT",
	"version": "0.2.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/nurpax/c64jasm"
	},
	"publisher": "nurpax",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.64.0"
	},
	"activationEvents": [
		"onLanguage:asm",
		"onDebug",
		"onCommand:extension.c64jasm.getProgramName"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "c64jasm configuration",
			"properties": {
				"c64jasm-client.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"c64jasm-client.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"c64jasm-client.vicePath": {
					"scope": "window",
					"type": "string",
					"default": "x64",
					"description": "Where to find the VICE executable when starting a debug session"
				}
			}
		},
		"languages": [
			{
				"id": "asm",
				"extensions": [
					".asm"
				],
				"aliases": [
					"c64jasm",
					"asm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"problemMatchers": [
			{
				"name": "c64jasm",
				"owner": "c64jasm",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^Compiling ",
					"endsPattern": "^Compilation (succeeded|failed)"
				}
			}
		],
		"grammars": [
			{
				"language": "asm",
				"scopeName": "source.asm.c64",
				"path": "./syntaxes/c64jasm.tmLanguage.json"
			}
		],
		"breakpoints": [
			{
				"language": "asm"
			}
		],
		"debuggers": [
			{
				"type": "c64jasm",
				"label": "c64jasm Debug",
				"program": "./client/out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "c64jasm",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "c64jasm Debug: Launch",
						"description": "A new configuration for 'debugging' a user selected markdown file.",
						"body": {
							"type": "c64jasm",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.c64jasm.getProgramName"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile:client": "tsc -p ./client/tsconfig.json",
		"compile:server": "tsc -p ./server/tsconfig.json",
		"watch:client": "tsc -w -p ./client/tsconfig.json",
		"watch:server": "tsc -w -p ./server/tsconfig.json",
		"compile": "npm run compile:client && npm run compile:server",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "14.x",
		"typescript": "^4.5.5"
	}
}
